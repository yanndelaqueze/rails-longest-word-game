<div class="container">
  <h1>New Game</h1>
  <ul class="list-inline">
  <% @letters.each do |letter| %>
  <li class="list-inline-item border border-secondary-subtle p-2 rounded alert alert-secondary"><%= letter %></li>
  <% end %>
  </ul>
  <p>What is the longest word you can find ?</p>
  <form action="/score" method="post" data-turbo="false"
    class="form-control">
    <input type="text" name="word" placeholder="Type a Word">
    <input type="submit" value="Play" class="btn btn-primary">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :grid, @letters %>
  </form>
</div>
